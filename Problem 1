#Find the Index of the First Occurrence in a String

#Time Complexity (TC): O(n)
#Space Complexity (SC): O(1)


class Solution:
    def strStr(self, haystack: str, needle: str) -> int:
        if not needle:
            return 0

        if needle in haystack:
            return haystack.index(needle)
        else:
            return -1
